<%= dm_menu do %>  
  <%= dm_header %>

  <% if current_user %>
    <%= dm_nav do  %>  
      <% if ! current_user.student? %>
        <%= dropdown_menu :round, big_dmicon('bars') + @current_round.to_s do %>  
          <% Round.order('start_date desc').each do |round| %>
            <%= link_to fwdmicon('calendar-alt') + " " + round.to_s, profiles_path(round_id: round) %>
          <% end %>
          <% if current_user.admin? %>
            <div class="dropdown-divider"></div>
            <%= link_to fwdmicon('pencil') + ' modifiche', rounds_path %>
          <% end %>
          <%# <% if current_user.admin? %1> %>
            <%#  <li><%= link_to fwdmicon('user') + ' aggiungi studente', new_student_path %1></li> %>
            <%# <% end %1> %>
        <% end %>
      <% end %>
      <% if current_user.admin? %>
        <li><%= link_to big_dmicon('building') + ' organizzazioni', organizations_path %></li>
      <% end %>
    <% end %>
  <% end %>
<% end %>
